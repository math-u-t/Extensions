{
  "manifest_version": 3,
  "name": "URL Image Viewer",
  "description": "URLから画像を表示する拡張機能",
  "version": "1.0",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    }
  }
}